{
    "manifest_version": 3,
    "name": "Homework Distraction Blocker/Timer",
    "version": "1.0.0",
    "description": "Blocks distracting websites during your work time",
    "permissions": ["storage", "activeTab", "scripting"],
    "action": { 
        "default_popup": "popup.html",
        "default_icon": {
            "16": "16.png",
            "32": "32.png",
            "48": "48.png",
            "128": "128.png"
        }
    },
    "icons": {
        "16": "16.png",
        "32": "32.png",
        "48": "48.png",
        "128": "128.png"
    },
    
    

    "content_scripts": [{
        "matches": ["https://www.youtube.com/*"],
        "css":["main.css"],
        "js":["main.js"]

    }],

    "options_page": "options.html"

}